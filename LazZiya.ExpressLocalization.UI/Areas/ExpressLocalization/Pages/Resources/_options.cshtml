@model LazZiya.ExpressLocalization.UI.Areas.ExpressLocalization.Models.ResourceListItem
@{
    var dropDownDir = CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "dropright" : "dropleft";
}

<!-- Default dropleft button -->
<div class="btn-group @(dropDownDir)">
    <button type="button" class="btn btn-light border-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-cog"></i>
    </button>
    <div class="dropdown-menu">
            <a class="dropdown-item" asp-page="Edit" asp-route-id="@Model.ID">
                <i class="fas fa-edit"></i>
                Edit
            </a>
        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#translate-@(Model.ID)">
                <i class="fas fa-language"></i>
                Translations
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#delete-@(Model.ID)">
                <i class="fas fa-trash-alt"></i>
                Delete
            </a>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="delete-@(Model.ID)" tabindex="-1" role="dialog" aria-labelledby="deleteLabel-@(Model.ID)" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel-@(Model.ID)">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Delete this record?
                <ul>
                    <li>
                        @Model.Key
                        <p><small>@Model.Comment</small></p>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>